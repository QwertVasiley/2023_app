<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/fon"
            android:id="@+id/fon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="center"/>
    <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:gravity="start"
            android:padding="20pt"
            tools:ignore="MissingConstraints">


        <Button
                android:layout_weight="1"
                android:id="@+id/image_gray1"
                android:layout_marginHorizontal="2pt"
                android:layout_width="35pt"
                android:layout_height="35pt"
                app:srcCompat="@drawable/grey"
                android:background="@drawable/grey"
                android:textSize="50dp"/>

        <Button
                android:layout_weight="1"
                android:id="@+id/image_gray2"
                android:layout_marginHorizontal="2pt"
                android:layout_width="35pt"
                android:layout_height="35pt"
                android:src="@drawable/grey"
                android:background="@drawable/grey"
                android:textSize="50dp"/>
        <Button
                android:layout_weight="1"
                android:id="@+id/image_gray3"
                android:layout_marginHorizontal="2pt"
                android:layout_width="35pt"
                android:layout_height="35pt"
